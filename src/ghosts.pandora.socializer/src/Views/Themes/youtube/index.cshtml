@{
    Layout = null;
}
@model List<Ghosts.Socializer.Infrastructure.Post>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>YouTube</title>
    <link rel="stylesheet" href="/themes/youtube/css/feed.css">
    <link rel="icon" href="/themes/youtube/images/youtube-icon.png">
</head>
<body>
    <div class="app">
        <!-- Header -->
        <header class="header">
            <div class="header-left">
                <button class="menu-btn">‚ò∞</button>
                <div class="logo">
                    <img src="/themes/youtube/images/youtube-logo.png" alt="YouTube" class="youtube-logo">
                </div>
            </div>
            <div class="header-center">
                <div class="search-container">
                    <input type="text" placeholder="Search" class="search-input">
                    <button class="search-btn">üîç</button>
                </div>
                <button class="mic-btn">üé§</button>
            </div>
            <div class="header-right">
                <button class="header-btn">üìπ</button>
                <button class="header-btn">üîî</button>
                <div class="user-menu">
                    <img src="/themes/youtube/images/profile-avatar.jpg" alt="Profile" class="user-avatar">
                </div>
            </div>
        </header>

        <div class="main-container">
            <!-- Sidebar -->
            <aside class="sidebar">
                <div class="sidebar-section">
                    <div class="sidebar-item active">
                        <span class="sidebar-icon">üè†</span>
                        <span class="sidebar-text">Home</span>
                    </div>
                    <div class="sidebar-item">
                        <span class="sidebar-icon">üé¨</span>
                        <span class="sidebar-text">Shorts</span>
                    </div>
                    <div class="sidebar-item">
                        <span class="sidebar-icon">üì∫</span>
                        <span class="sidebar-text">Subscriptions</span>
                    </div>
                </div>

                <div class="sidebar-divider"></div>

                <div class="sidebar-section">
                    <div class="sidebar-item">
                        <span class="sidebar-icon">üìö</span>
                        <span class="sidebar-text">Library</span>
                    </div>
                    <div class="sidebar-item">
                        <span class="sidebar-icon">üïí</span>
                        <span class="sidebar-text">History</span>
                    </div>
                    <div class="sidebar-item">
                        <span class="sidebar-icon">üìπ</span>
                        <span class="sidebar-text">Your videos</span>
                    </div>
                    <div class="sidebar-item">
                        <span class="sidebar-icon">‚è∞</span>
                        <span class="sidebar-text">Watch later</span>
                    </div>
                    <div class="sidebar-item">
                        <span class="sidebar-icon">üëç</span>
                        <span class="sidebar-text">Liked videos</span>
                    </div>
                </div>

                <div class="sidebar-divider"></div>

                <div class="sidebar-section">
                    <h3 class="sidebar-title">Subscriptions</h3>
                    <div class="sidebar-item">
                        <img src="/themes/youtube/images/channel1.jpg" alt="Channel" class="channel-avatar">
                        <span class="sidebar-text">Tech Reviews</span>
                    </div>
                    <div class="sidebar-item">
                        <img src="/themes/youtube/images/channel2.jpg" alt="Channel" class="channel-avatar">
                        <span class="sidebar-text">Coding Tutorials</span>
                    </div>
                    <div class="sidebar-item">
                        <img src="/themes/youtube/images/channel3.jpg" alt="Channel" class="channel-avatar">
                        <span class="sidebar-text">Gaming Central</span>
                    </div>
                    <div class="sidebar-item">
                        <img src="/themes/youtube/images/channel4.jpg" alt="Channel" class="channel-avatar">
                        <span class="sidebar-text">Music Hub</span>
                    </div>
                </div>
            </aside>

            <!-- Main Content -->
            <main class="main-content">
                <!-- Category Tabs -->
                <div class="category-tabs">
                    <button class="category-tab active">All</button>
                    <button class="category-tab">Gaming</button>
                    <button class="category-tab">Music</button>
                    <button class="category-tab">Technology</button>
                    <button class="category-tab">Programming</button>
                    <button class="category-tab">Education</button>
                    <button class="category-tab">Entertainment</button>
                    <button class="category-tab">Sports</button>
                    <button class="category-tab">News</button>
                </div>

                <!-- Videos Grid -->
                <div class="videos-grid">
                    @foreach (var post in Model)
                    {
                        <div class="video-card">
                            <div class="video-thumbnail">
                                <div class="thumbnail-placeholder">
                                    <span>Video</span>
                                </div>
                            </div>
                            <div class="video-info">
                                <img src="/u/@post.User.Username/avatar" alt="@post.User.Username" class="channel-avatar">
                                <div class="video-details">
                                    <div class="video-title">@Html.Raw(post.Message)</div>
                                    <div class="video-meta">
                                        <span class="channel-name">@post.User.Username</span>
                                        <div class="video-stats">
                                            <span>@(post.Likes?.Count ?? 0) likes</span>
                                            <span>‚Ä¢</span>
                                            <span>@(post.Comments?.Count ?? 0) comments</span>
                                            <span>‚Ä¢</span>
                                            <span>@post.CreatedUtc</span>
                                        </div>
                                        <div class="video-actions">
                                            <button class="like-it" data-id="@post.Id">
                                                ‚ù§Ô∏è @(post.Likes?.Count ?? 0)
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </main>
        </div>
    </div>

    <script src="/lib/jquery/dist/jquery.min.js"></script>
    <script src="/js/signalr.min.js"></script>
    <script src="/js/posts.js"></script>
    <script src="/themes/youtube/js/feed.js"></script>
</body>
</html>
