@{
    Layout = null;
}
@using Ghosts.Socializer.Infrastructure

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>X | Messages</title>
    <link rel="stylesheet" href="/themes/x/css/feed.css">
    <link rel="icon" href="/themes/x/images/x-icon.png">
    <style>
        .messages-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
            background: #000;
            min-height: 100vh;
            color: #fff;
        }

        .messages-header {
            background: #16181c;
            border: 1px solid #2f3336;
            border-radius: 16px;
            padding: 20px;
            margin-bottom: 20px;
        }

        .messages-title {
            font-size: 20px;
            font-weight: 800;
            color: #fff;
            margin: 0 0 8px 0;
        }

        .messages-subtitle {
            color: #71767b;
            font-size: 15px;
            margin: 0;
        }

        .messages-content {
            display: flex;
            gap: 20px;
        }

        .messages-sidebar {
            width: 350px;
            background: #16181c;
            border: 1px solid #2f3336;
            border-radius: 16px;
            overflow: hidden;
        }

        .new-message-form {
            padding: 20px;
            border-bottom: 1px solid #2f3336;
        }

        .form-label {
            display: block;
            font-weight: 700;
            color: #fff;
            margin-bottom: 8px;
            font-size: 15px;
        }

        .form-input {
            width: 100%;
            padding: 12px;
            border: 1px solid #2f3336;
            border-radius: 20px;
            font-size: 15px;
            background: #000;
            color: #fff;
            margin-bottom: 12px;
        }

        .form-input:focus {
            outline: none;
            border-color: #1d9bf0;
        }

        .btn-primary {
            background: #1d9bf0;
            border: none;
            border-radius: 20px;
            color: #fff;
            padding: 8px 24px;
            font-size: 15px;
            font-weight: 700;
            cursor: pointer;
            transition: background-color 0.2s;
        }

        .btn-primary:hover {
            background: #1a8cd8;
        }

        .conversations-list {
            padding: 0;
        }

        .conversation-item {
            display: flex;
            align-items: center;
            padding: 16px 20px;
            cursor: pointer;
            transition: background-color 0.2s;
            text-decoration: none;
            color: inherit;
            border-bottom: 1px solid #2f3336;
        }

        .conversation-item:hover {
            background-color: #080808;
        }

        .conversation-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            margin-right: 12px;
        }

        .conversation-info {
            flex: 1;
        }

        .conversation-name {
            font-weight: 700;
            color: #fff;
            font-size: 15px;
            margin-bottom: 2px;
        }

        .conversation-preview {
            color: #71767b;
            font-size: 13px;
        }

        .messages-main {
            flex: 1;
            background: #16181c;
            border: 1px solid #2f3336;
            border-radius: 16px;
            padding: 20px;
        }

        .message-groups {
            max-height: 500px;
            overflow-y: auto;
        }

        .message-group {
            margin-bottom: 30px;
        }

        .message-group-title {
            font-size: 18px;
            font-weight: 800;
            color: #fff;
            margin-bottom: 16px;
            padding-bottom: 8px;
            border-bottom: 1px solid #2f3336;
        }

        .message-item {
            display: flex;
            align-items: flex-start;
            margin-bottom: 16px;
            padding: 12px;
            background: #000;
            border-radius: 16px;
            border: 1px solid #2f3336;
        }

        .message-item.sent {
            background: #0f1419;
            margin-left: 20px;
        }

        .message-avatar {
            width: 32px;
            height: 32px;
            border-radius: 50%;
            margin-right: 12px;
        }

        .message-content {
            flex: 1;
        }

        .message-header {
            display: flex;
            align-items: center;
            margin-bottom: 4px;
        }

        .message-sender {
            font-weight: 700;
            color: #fff;
            font-size: 15px;
            margin-right: 8px;
        }

        .message-time {
            color: #71767b;
            font-size: 13px;
        }

        .message-text {
            color: #fff;
            font-size: 15px;
            line-height: 1.3;
        }

        .empty-state {
            text-align: center;
            padding: 40px 20px;
            color: #71767b;
        }

        .empty-state h3 {
            color: #fff;
            margin-bottom: 8px;
        }
    </style>
</head>
<body data-theme="x">
    <div class="messages-container">
        <div class="messages-header">
            <h1 class="messages-title">Messages</h1>
            <p class="messages-subtitle">Send a message, get a message</p>
        </div>

        <div class="messages-content">
            <div class="messages-sidebar">
                <div class="new-message-form">
                    <form method="post" action="/messages/send">
                        <label class="form-label">To:</label>
                        <input type="text" name="toUsername" class="form-input" placeholder="Enter username" required>
                        <label class="form-label">Message:</label>
                        <input type="text" name="message" class="form-input" placeholder="Start a new message" required>
                        <button type="submit" class="btn-primary">Send</button>
                    </form>
                </div>

                @if (ViewBag.ConversationPartners != null)
                {
                    <div class="conversations-list">
                        @foreach (var partner in ViewBag.ConversationPartners)
                        {
                            <a href="/messages/conversation/@partner" class="conversation-item">
                                <img src="/u/@partner/avatar" alt="@partner" class="conversation-avatar">
                                <div class="conversation-info">
                                    <div class="conversation-name">@partner</div>
                                    <div class="conversation-preview">Active now</div>
                                </div>
                            </a>
                        }
                    </div>
                }
            </div>

            <div class="messages-main">
                @if (ViewBag.ReceivedMessages != null)
                {
                    <div class="message-group">
                        <h3 class="message-group-title">Recent Messages</h3>
                        <div class="message-groups">
                            @foreach (var message in ViewBag.ReceivedMessages)
                            {
                                <div class="message-item">
                                    <img src="/u/@message.FromUsername/avatar" alt="@message.FromUsername" class="message-avatar">
                                    <div class="message-content">
                                        <div class="message-header">
                                            <span class="message-sender">@message.FromUsername</span>
                                            <span class="message-time">@message.CreatedUtc.ToString("MMM dd, h:mm tt")</span>
                                        </div>
                                        <div class="message-text">@message.Message</div>
                                    </div>
                                </div>
                            }

                            @foreach (var message in ViewBag.SentMessages)
                            {
                                <div class="message-item sent">
                                    <img src="/u/@message.ToUsername/avatar" alt="@message.ToUsername" class="message-avatar">
                                    <div class="message-content">
                                        <div class="message-header">
                                            <span class="message-sender">To @message.ToUsername</span>
                                            <span class="message-time">@message.CreatedUtc.ToString("MMM dd, h:mm tt")</span>
                                        </div>
                                        <div class="message-text">@message.Message</div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }
                else
                {
                    <div class="empty-state">
                        <h3>Welcome to your inbox!</h3>
                        <p>Drop a line, share posts and more with private conversations between you and others on X.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</body>
</html>
