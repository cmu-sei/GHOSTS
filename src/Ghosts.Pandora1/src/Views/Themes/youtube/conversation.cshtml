@{
    Layout = null;
}
@using Ghosts.Pandora.Infrastructure

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>YouTube | Chat with @ViewBag.PartnerUsername</title>
    <link rel="stylesheet" href="/themes/youtube/css/youtube.css">
    <link rel="icon" href="/themes/youtube/images/youtube-icon.png" type="image/png">
    <style>
        .chat-layout {
            background: #0f0f0f;
            min-height: 100vh;
            padding: 16px;
            color: #fff;
        }

        .chat-container {
            max-width: 1000px;
            margin: 0 auto;
            background: #212121;
            border-radius: 8px;
            overflow: hidden;
        }

        .chat-header {
            background: #ff0000;
            color: #fff;
            padding: 16px 20px;
            display: flex;
            align-items: center;
        }

        .back-btn {
            background: none;
            border: none;
            color: #fff;
            cursor: pointer;
            padding: 8px;
            margin-right: 16px;
            border-radius: 4px;
            font-size: 18px;
            transition: background-color 0.1s;
        }

        .back-btn:hover {
            background: rgba(255, 255, 255, 0.1);
        }

        .chat-user-avatar {
            width: 48px;
            height: 48px;
            border-radius: 50%;
            margin-right: 16px;
        }

        .chat-user-info h1 {
            font-size: 18px;
            font-weight: 500;
            margin: 0 0 4px 0;
            display: flex;
            align-items: center;
        }

        .verified-badge {
            color: #fff;
            margin-left: 8px;
            font-size: 16px;
        }

        .creator-badge {
            background: rgba(255, 255, 255, 0.2);
            color: #fff;
            font-size: 10px;
            padding: 2px 6px;
            border-radius: 2px;
            margin-left: 8px;
            font-weight: 500;
        }

        .chat-user-stats {
            font-size: 12px;
            opacity: 0.9;
        }

        .chat-messages {
            min-height: 500px;
            max-height: 600px;
            overflow-y: auto;
            padding: 20px;
            display: flex;
            flex-direction: column;
            gap: 16px;
            background: #0f0f0f;
        }

        .chat-message {
            display: flex;
            align-items: flex-start;
            max-width: 75%;
            background: #212121;
            border-radius: 8px;
            padding: 12px;
            border-left: 4px solid #3c3c3c;
        }

        .chat-message.sent {
            align-self: flex-end;
            flex-direction: row-reverse;
            background: #1a0000;
            border-left-color: #ff0000;
        }

        .chat-message.received {
            align-self: flex-start;
        }

        .video-actions {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin: 0 12px;
            min-width: 32px;
        }

        .action-btn {
            background: none;
            border: none;
            cursor: pointer;
            color: #aaa;
            font-size: 16px;
            padding: 4px;
            transition: color 0.1s;
            margin-bottom: 4px;
        }

        .action-btn:hover {
            color: #ff0000;
        }

        .action-count {
            font-size: 10px;
            color: #aaa;
            text-align: center;
            margin-bottom: 4px;
        }

        .chat-message-avatar {
            width: 36px;
            height: 36px;
            border-radius: 50%;
            margin: 0 12px;
        }

        .chat-message-content {
            flex: 1;
        }

        .chat-message-header {
            display: flex;
            align-items: center;
            margin-bottom: 8px;
        }

        .chat-message-author {
            font-weight: 500;
            color: #fff;
            font-size: 14px;
            margin-right: 12px;
            display: flex;
            align-items: center;
        }

        .author-verified {
            color: #aaa;
            margin-left: 4px;
            font-size: 12px;
        }

        .chat-message-time {
            color: #aaa;
            font-size: 12px;
        }

        .chat-message-text {
            background: #3c3c3c;
            padding: 12px;
            border-radius: 8px;
            color: #fff;
            font-size: 14px;
            line-height: 1.4;
            word-wrap: break-word;
        }

        .chat-message.sent .chat-message-text {
            background: #ff0000;
        }

        .chat-input-container {
            background: #212121;
            padding: 16px 20px;
            border-top: 1px solid #3c3c3c;
        }

        .chat-input-form {
            display: flex;
            align-items: center;
            background: #0f0f0f;
            border-radius: 24px;
            border: 1px solid #3c3c3c;
            padding: 8px 16px;
        }

        .chat-input {
            flex: 1;
            border: none;
            background: none;
            font-size: 14px;
            padding: 12px 0;
            outline: none;
            resize: none;
            max-height: 120px;
            color: #fff;
            font-family: 'Roboto', sans-serif;
        }

        .chat-input::placeholder {
            color: #717171;
        }

        .chat-send-btn {
            background: #ff0000;
            border: none;
            border-radius: 50%;
            width: 36px;
            height: 36px;
            color: #fff;
            cursor: pointer;
            margin-left: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: background-color 0.1s;
        }

        .chat-send-btn:hover {
            background: #cc0000;
        }

        .empty-chat {
            text-align: center;
            padding: 48px 20px;
            color: #aaa;
            margin: auto;
        }

        .empty-chat h3 {
            color: #fff;
            margin-bottom: 8px;
            font-weight: 400;
        }

        .video-info {
            background: #1a1a1a;
            border: 1px solid #3c3c3c;
            border-radius: 8px;
            padding: 16px;
            margin-bottom: 16px;
            display: flex;
            align-items: center;
        }

        .video-thumbnail {
            width: 80px;
            height: 60px;
            background: #ff0000;
            border-radius: 4px;
            margin-right: 16px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
        }

        .video-details h4 {
            color: #fff;
            margin: 0 0 4px 0;
            font-size: 14px;
            font-weight: 500;
        }

        .video-meta {
            color: #aaa;
            font-size: 12px;
        }

        .live-indicator {
            background: #ff0000;
            color: #fff;
            font-size: 10px;
            padding: 2px 6px;
            border-radius: 2px;
            margin-left: 8px;
            font-weight: 700;
            animation: pulse 2s infinite;
        }

        @@keyframes pulse {
            0% { opacity: 1; }
            50% { opacity: 0.7; }
            100% { opacity: 1; }
        }
    </style>
</head>
<body data-theme="youtube">
    <!-- YouTube Header -->
    <header class="header">
        <div class="header-left">
            <button class="menu-button">‚ò∞</button>
            <a href="/" class="logo">
                <img src="/themes/youtube/images/youtube-icon.png" alt="YouTube" class="youtube-logo">
                <span class="youtube-text">YouTube</span>
            </a>
        </div>
        <div class="header-center">
            <div class="search-container">
                <input type="text" placeholder="Search" class="search-input">
                <button class="search-button">üîç</button>
            </div>
        </div>
        <div class="header-right">
            <a href="/" class="header-icon">üè†</a>
            <a href="/messages" class="header-icon active">üí¨</a>
            <img src="/u/@ViewBag.Username/avatar" alt="Profile" class="profile-pic">
        </div>
    </header>

    <div class="chat-layout">
        <div class="chat-container">
            <div class="chat-header">
                <button class="back-btn" onclick="window.location.href='/messages'">‚Üê</button>
                <img src="/u/@ViewBag.PartnerUsername/avatar" alt="@ViewBag.PartnerUsername" class="chat-user-avatar">
                <div class="chat-user-info">
                    <h1>
                        @ViewBag.PartnerUsername
                        <span class="verified-badge">‚úì</span>
                        <span class="creator-badge">CREATOR</span>
                        <span class="live-indicator">LIVE</span>
                    </h1>
                    <div class="chat-user-stats">2.4M subscribers ‚Ä¢ 847 videos</div>
                </div>
            </div>

            <div class="chat-messages">
                <div class="video-info">
                    <div class="video-thumbnail">‚ñ∂Ô∏è</div>
                    <div class="video-details">
                        <h4>Private Channel Messages</h4>
                        <div class="video-meta">Direct conversation with @ViewBag.PartnerUsername ‚Ä¢ Private</div>
                    </div>
                </div>

                @if (ViewBag.Conversation != null)
                {
                    @foreach (var message in ViewBag.Conversation)
                    {
                        <div class="chat-message @(message.FromUsername == ViewBag.Username ? "sent" : "received")">
                            <div class="video-actions">
                                <button class="action-btn">üëç</button>
                                <div class="action-count">1.2K</div>
                                <button class="action-btn">üëé</button>
                                <div class="action-count">12</div>
                                <button class="action-btn">üí¨</button>
                            </div>
                            <img src="/u/@(message.FromUsername == ViewBag.Username ? ViewBag.Username : ViewBag.PartnerUsername)/avatar"
                                 alt="@(message.FromUsername == ViewBag.Username ? ViewBag.Username : ViewBag.PartnerUsername)"
                                 class="chat-message-avatar">
                            <div class="chat-message-content">
                                <div class="chat-message-header">
                                    <span class="chat-message-author">
                                        @(message.FromUsername == ViewBag.Username ? ViewBag.Username : ViewBag.PartnerUsername)
                                        <span class="author-verified">‚úì</span>
                                    </span>
                                    <span class="chat-message-time">
                                        @message.CreatedUtc.ToString("MMM dd") ‚Ä¢ @message.CreatedUtc.ToString("h:mm tt")@(message.ReadUtc != null ? " ‚Ä¢ Watched" : "")
                                    </span>
                                </div>
                                <div class="chat-message-text">@message.Message</div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="empty-chat">
                        <h3>Start a conversation with @ViewBag.PartnerUsername</h3>
                        <p>Connect with this creator and join the community!</p>
                    </div>
                }
            </div>

            <div class="chat-input-container">
                <form method="post" action="/messages/send" class="chat-input-form">
                    <input type="hidden" name="toUsername" value="@ViewBag.PartnerUsername">
                    <textarea name="message" class="chat-input" placeholder="Add a message..." required rows="1"></textarea>
                    <button type="submit" class="chat-send-btn">
                        ‚û§
                    </button>
                </form>
            </div>
        </div>
    </div>

    <script src="/lib/jquery/dist/jquery.min.js"></script>
    <script>
        // Auto-scroll to bottom of messages
        $('.chat-messages').scrollTop($('.chat-messages')[0].scrollHeight);

        // Auto-resize textarea
        $('.chat-input').on('input', function() {
            this.style.height = 'auto';
            this.style.height = Math.min(this.scrollHeight, 120) + 'px';
        });

        // Submit on Enter
        $('.chat-input').on('keypress', function(e) {
            if (e.which === 13 && !e.shiftKey) {
                e.preventDefault();
                $(this).closest('form').submit();
            }
        });

        // Video action button interactions
        $('.action-btn').click(function(e) {
            e.preventDefault();
            $(this).css('color', '#ff0000');
            var count = $(this).next('.action-count');

            if (count.length) {
                var currentCount = parseFloat(count.text());
                if ($(this).text() === 'üëç') {
                    count.text((currentCount + 0.1).toFixed(1) + 'K');
                } else if ($(this).text() === 'üí¨') {
                    count.text((parseInt(currentCount) + 1));
                }
            }

            setTimeout(() => {
                $(this).css('color', '#aaa');
            }, 1000);
        });
    </script>
</body>
</html>
