@{
    Layout = null;
}
@model List<Ghosts.Socializer.Infrastructure.Post>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home / X</title>
    <link rel="stylesheet" href="/themes/x/css/feed.css?@System.Guid.NewGuid()">
    <link rel="icon" href="/themes/x/images/x-icon.png">
</head>
<body data-theme="x">
    <div class="app">
        <!-- Left Sidebar -->
        <div class="sidebar">
            <div class="sidebar-content">
                <div class="logo">
                    <a href="/"><img src="/themes/x/images/x-logo.png" alt="X" class="x-logo"></a>
                </div>
                <nav class="nav-menu">
                    <a href="/" class="nav-item active">
                        <span class="nav-icon">üè†</span>
                        <span class="nav-text">Home</span>
                    </a>
                    <a href="#" class="nav-item">
                        <span class="nav-icon">üîç</span>
                        <span class="nav-text">Explore</span>
                    </a>
                    <a href="#" class="nav-item">
                        <span class="nav-icon">üîî</span>
                        <span class="nav-text">Notifications</span>
                    </a>
                    <a href="/messages" class="nav-item">
                        <span class="nav-icon">‚úâÔ∏è</span>
                        <span class="nav-text">Messages</span>
                    </a>
                    <a href="#" class="nav-item">
                        <span class="nav-icon">üîñ</span>
                        <span class="nav-text">Bookmarks</span>
                    </a>
                    <a href="#" class="nav-item">
                        <span class="nav-icon">üë•</span>
                        <span class="nav-text">Communities</span>
                    </a>
                    <a href="#" class="nav-item">
                        <span class="nav-icon">‚ùå</span>
                        <span class="nav-text">Premium</span>
                    </a>
                    <a href="/profile" class="nav-item">
                        <span class="nav-icon">üë§</span>
                        <span class="nav-text">Profile</span>
                    </a>
                    <a href="#" class="nav-item">
                        <span class="nav-icon">‚öôÔ∏è</span>
                        <span class="nav-text">Settings</span>
                    </a>
                </nav>

                <button class="tweet-btn">Post</button>
            </div>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <div class="feed-header">
                <h2>Home</h2>
                <div class="feed-tabs">
                    <button class="tab active">For you</button>
                    <button class="tab">Following</button>
                </div>
                <br/>
            </div>

            @{
                ViewBag.Theme = "x";
            }

            @await Html.PartialAsync("_CreatePost")

            <!-- Feed -->
            <div class="feed" id="newsfeed-items-grid">
                @{
                    if (Model != null)
                    {
                        foreach (var post in Model)
                        {
                            await Html.RenderPartialAsync("_PostCard", post);
                        }
                    }
                }
            </div>
        </div>

        <!-- Right Sidebar -->
        <div class="right-sidebar">
            <div class="trending-widget">
                <h3>What's happening</h3>
                <div class="trending-item">
                    <div class="trending-category">Trending in Technology</div>
                    <div class="trending-topic">#JavaScript</div>
                    <div class="trending-posts">42.1K posts</div>
                </div>
                <div class="trending-item">
                    <div class="trending-category">Trending</div>
                    <div class="trending-topic">#WebDev</div>
                    <div class="trending-posts">28.4K posts</div>
                </div>
                <div class="trending-item">
                    <div class="trending-category">Technology ¬∑ Trending</div>
                    <div class="trending-topic">React</div>
                    <div class="trending-posts">15.2K posts</div>
                </div>
            </div>

            <div class="suggestions-widget">
                @{
                    var user1 = Faker.Internet.UserName();
                    var user2 = Faker.Internet.UserName();
                }
                <h3>Who to follow</h3>
                <div class="suggestion-item">
                    <img src="/u/@user1/avatar" alt="User" class="suggestion-avatar">
                    <div class="suggestion-info">
                        <div class="suggestion-name">@user1</div>
                        <div class="suggestion-handle">@@@user1</div>
                    </div>
                    <button class="follow-btn">Follow</button>
                </div>
                <div class="suggestion-item">
                    <img src="/u/@user2/avatar" alt="User" class="suggestion-avatar">
                    <div class="suggestion-info">
                        <div class="suggestion-name">@user2</div>
                        <div class="suggestion-handle">@@@user2</div>
                    </div>
                    <button class="follow-btn">Follow</button>
                </div>
            </div>
        </div>
    </div>

    @await Html.PartialAsync("_Scripts")
</body>
</html>
