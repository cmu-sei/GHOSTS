@{
    Layout = null;
}

@{
    ViewBag.Theme = "discord";
}

@model List<Ghosts.Pandora.Infrastructure.Models.Post>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Discord | Your Place to Talk and Hang Out</title>
    <link rel="stylesheet" href="/themes/discord/css/feed.css">
    <link rel="icon" href="/themes/discord/images/discord-icon.png">
</head>
<body>
    <div class="app">
        <!-- Left Sidebar -->
        <div class="server-sidebar">
            <div class="home-button">
                <div class="server-icon home">
                    <img src="/themes/discord/images/discord-icon.png" alt="Discord Home" class="discord-logo">
                </div>
            </div>
            <div class="server-separator"></div>

            <!-- Servers -->
            <div class="server-list">
                <div class="server-item active">
                    <div class="server-icon">
                        <img src="/u/gaming-server/avatar" alt="Gaming Server" class="server-avatar">
                    </div>
                    <div class="notification-badge">3</div>
                </div>
                <div class="server-item">
                    <div class="server-icon">
                        <img src="/u/tech-server/avatar" alt="Tech Server" class="server-avatar">
                    </div>
                </div>
                <div class="server-item">
                    <div class="server-icon">
                        <img src="/u/art-server/avatar" alt="Art Server" class="server-avatar">
                    </div>
                    <div class="notification-badge">1</div>
                </div>
                <div class="server-item">
                    <div class="server-icon">
                        <img src="/u/music-server/avatar" alt="Music Server" class="server-avatar">
                    </div>
                </div>
                <div class="server-item">
                    <div class="server-icon">
                        <img src="/u/study-server/avatar" alt="Study Server" class="server-avatar">
                    </div>
                </div>
            </div>

            <div class="add-server">
                <div class="server-icon add">+</div>
            </div>

            <div class="explore-server">
                <div class="server-icon explore">üß≠</div>
            </div>
        </div>

        <!-- Channel Sidebar -->
        <div class="channel-sidebar">
            <div class="server-header">
                <h2 class="server-name">Gaming Hub</h2>
                <button class="dropdown-btn">‚ñº</button>
            </div>

            <div class="channels-container">
                <!-- Text Channels -->
                <div class="channel-category">
                    <div class="category-header">
                        <span class="category-arrow">‚ñº</span>
                        <span class="category-name">TEXT CHANNELS</span>
                        <button class="add-channel">+</button>
                    </div>
                    <div class="channel-list">
                        <div class="channel-item active">
                            <span class="channel-icon">#</span>
                            <span class="channel-name">general</span>
                            <div class="unread-indicator"></div>
                        </div>
                        <div class="channel-item">
                            <span class="channel-icon">#</span>
                            <span class="channel-name">gaming-discussion</span>
                        </div>
                        <div class="channel-item">
                            <span class="channel-icon">#</span>
                            <span class="channel-name">tech-talk</span>
                            <div class="unread-indicator">2</div>
                        </div>
                        <div class="channel-item">
                            <span class="channel-icon">#</span>
                            <span class="channel-name">memes</span>
                        </div>
                        <div class="channel-item">
                            <span class="channel-icon">#</span>
                            <span class="channel-name">off-topic</span>
                        </div>
                    </div>
                </div>

                <!-- Direct Messages -->
                <div class="channel-category">
                    <div class="category-header">
                        <span class="category-arrow">‚ñº</span>
                        <span class="category-name">DIRECT MESSAGES</span>
                        <button class="add-channel">+</button>
                    </div>
                    <div class="channel-list">
                        <a href="/messages" class="channel-item" style="text-decoration: none; color: inherit;">
                            <span class="channel-icon">üì©</span>
                            <span class="channel-name">Direct Messages</span>
                        </a>
                    </div>
                </div>

                <!-- Voice Channels -->
                <div class="channel-category">
                    <div class="category-header">
                        <span class="category-arrow">‚ñº</span>
                        <span class="category-name">VOICE CHANNELS</span>
                        <button class="add-channel">+</button>
                    </div>
                    <div class="channel-list">
                        <div class="channel-item">
                            <span class="channel-icon">üîä</span>
                            <span class="channel-name">General Voice</span>
                            <div class="voice-users">
                                <img src="/u/@Faker.Internet.UserName()/avatar" alt="User" class="voice-avatar">
                                <img src="/u/@Faker.Internet.UserName()/avatar" alt="User" class="voice-avatar">
                                <span class="voice-count">+2</span>
                            </div>
                        </div>
                        <div class="channel-item">
                            <span class="channel-icon">üîä</span>
                            <span class="channel-name">Gaming Room</span>
                        </div>
                        <div class="channel-item">
                            <span class="channel-icon">üîä</span>
                            <span class="channel-name">Study Room</span>
                            <div class="voice-users">
                                <img src="/u/@Faker.Internet.UserName()/avatar" alt="User" class="voice-avatar">
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- User Panel -->
            <div class="user-panel">
                <div class="user-info">
                    <img src="/u/@Faker.Internet.UserName()/avatar" alt="User" class="voice-avatar">
                    <div class="user-details">
                        <div class="user-name">JohnDoe</div>
                        <div class="user-status">#1234</div>
                    </div>
                </div>
                <div class="user-controls">
                    <button class="control-btn" title="Mute">üé§</button>
                    <button class="control-btn" title="Deafen">üéß</button>
                    <button class="control-btn" title="Settings">‚öôÔ∏è</button>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <!-- Channel Header -->
            <div class="channel-header">
                <div class="channel-info">
                    <span class="channel-hashtag">#</span>
                    <h3 class="channel-title">general</h3>
                    <span class="channel-topic">Welcome to the Gaming Hub! Feel free to chat about anything here.</span>
                </div>
                <div class="channel-controls">
                    <button class="header-btn" title="Start Voice Call">üìû</button>
                    <button class="header-btn" title="Start Video Call">üìπ</button>
                    <button class="header-btn" title="Pin Message">üìå</button>
                    <button class="header-btn" title="Member List">üë•</button>
                    <div class="search-bar">
                        <input type="text" placeholder="Search" class="search-input">
                        <button class="search-btn">üîç</button>
                    </div>
                    <button class="header-btn" title="Inbox">üì•</button>
                    <button class="header-btn" title="Help">‚ùì</button>
                </div>
            </div>

            <!-- Messages Container -->
            <div class="messages-container">
                <div class="messages-list">
                    @foreach (var post in Model)
                    {
                        await Html.RenderPartialAsync("_PostCard", post);
                    }
                </div>
            </div>

            @await Html.PartialAsync("_CreatePost")
        </div>

        <!-- Member List -->
        <div class="member-list">
            <div class="members-header">
                <h3>Members ‚Äî @Faker.RandomNumber.Next(25, 345)</h3>
            </div>

            @{
                var user1 = Faker.Internet.UserName();
                var user2 = Faker.Internet.UserName();
                var user3 = Faker.Internet.UserName();
                var user4 = Faker.Internet.UserName();
                var user5 = Faker.Internet.UserName();
                var user6 = Faker.Internet.UserName();
                var user7 = Faker.Internet.UserName();
                var user8 = Faker.Internet.UserName();
            }

            <div class="members-container">
                <!-- Online Members -->
                <div class="member-category">
                    <h4 class="member-role">ONLINE ‚Äî 23</h4>
                    <div class="member-list-items">
                        <div class="member-item">
                            <img src="/u/@user1/avatar" alt="User" class="member-avatar">
                            <div class="member-info">
                                <div class="member-name">@user1</div>
                                <div class="member-activity">Playing @Faker.Company.Name()</div>
                            </div>
                            <div class="member-status online"></div>
                        </div>
                        <div class="member-item">
                            <img src="/u/@user2/avatar" alt="User" class="member-avatar">
                            <div class="member-info">
                                <div class="member-name">@user2</div>
                                <div class="member-activity">Listening to @Faker.Company.CatchPhrase()</div>
                            </div>
                            <div class="member-status online"></div>
                        </div>
                        <div class="member-item">
                            <img src="/u/@user3/avatar" alt="User" class="member-avatar">
                            <div class="member-info">
                                <div class="member-name">@user3</div>
                                <div class="member-activity">@Faker.Name.First()</div>
                            </div>
                            <div class="member-status online"></div>
                        </div>
                        <div class="member-item">
                            <img src="/u/@user4/avatar" alt="User" class="member-avatar">
                            <div class="member-info">
                                <div class="member-name">@user4</div>
                                <div class="member-activity">@Faker.Name.First()</div>
                            </div>
                            <div class="member-status online"></div>
                        </div>
                        <div class="member-item">
                            <img src="/u/@user5/avatar" alt="User" class="member-avatar">
                            <div class="member-info">
                                <div class="member-name">@user5</div>
                            </div>
                            <div class="member-status online"></div>
                        </div>
                    </div>
                </div>

                <!-- Offline Members -->
                <div class="member-category">
                    <h4 class="member-role">OFFLINE ‚Äî 104</h4>
                    <div class="member-list-items">
                        <div class="member-item">
                            <img src="/u/@user6/avatar" alt="User" class="member-avatar offline">
                            <div class="member-info">
                                <div class="member-name offline">@user6</div>
                            </div>
                            <div class="member-status offline"></div>
                        </div>
                        <div class="member-item">
                            <img src="/u/@user7/avatar" alt="User" class="member-avatar offline">
                            <div class="member-info">
                                <div class="member-name offline">@user7</div>
                            </div>
                            <div class="member-status offline"></div>
                        </div>
                        <div class="member-item">
                            <img src="/u/@user8/avatar" alt="User" class="member-avatar offline">
                            <div class="member-info">
                                <div class="member-name offline">@user8</div>
                            </div>
                            <div class="member-status offline"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="/lib/jquery/dist/jquery.min.js"></script>
    <script src="/js/signalr.min.js"></script>
    <script src="/js/social.js"></script>
</body>
</html>
