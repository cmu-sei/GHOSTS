<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <targets>
    <target name="logfile" xsi:type="File" fileName="logs/app.log" layout="${Date}|${callsite}|${message}" archiveAboveSize ="5000000" maxArchiveFiles="2" />
    <target name="clientupdates" xsi:type="File" fileName="logs/clientupdates.log" layout="${message}" archiveAboveSize ="5000000" maxArchiveFiles="2" />
  </targets>
  <rules>
    <logger name="*" minlevel="Trace" writeTo="clientupdates">
    </logger>
    <logger name="HEALTH" minlevel="Trace" writeTo="clientupdates" />
    <logger name="TIMELINE" minlevel="Trace" writeTo="clientupdates" />
  </rules>
</nlog>