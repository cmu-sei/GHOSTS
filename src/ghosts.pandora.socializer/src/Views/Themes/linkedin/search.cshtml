@model Ghosts.Socializer.Infrastructure.ViewModels.SearchResultsViewModel
@{
    Layout = null;
    var query = Model?.Query ?? string.Empty;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LinkedIn Search - @query</title>
    <link rel="stylesheet" href="/themes/linkedin/css/feed.css">
    <style>
        .search-wrapper {
            max-width: 960px;
            margin: 32px auto;
            display: grid;
            grid-template-columns: 280px 1fr;
            gap: 24px;
        }
        .side-card, .result-card {
            background: #fff;
            border-radius: 8px;
            padding: 24px;
            box-shadow: 0 0 0 1px rgba(0,0,0,0.08), 0 4px 12px rgba(0,0,0,0.08);
        }
        .search-form {
            display: flex;
            flex-direction: column;
            gap: 12px;
        }
        .search-form input {
            padding: 12px;
            border-radius: 4px;
            border: 1px solid rgba(0,0,0,0.3);
        }
        .search-form button {
            background: #0a66c2;
            color: #fff;
            border: none;
            border-radius: 24px;
            padding: 10px 16px;
            font-weight: 600;
            cursor: pointer;
        }
        .results-column h2 {
            margin-top: 0;
            font-size: 18px;
        }
        .result-list {
            display: grid;
            gap: 12px;
            margin-bottom: 32px;
        }
        .result-card a {
            color: inherit;
            text-decoration: none;
        }
        .empty-state {
            color: rgba(0,0,0,0.6);
        }
    </style>
</head>
<body>
    <div class="header">
        <div class="header-container">
            <div class="header-left">
                <a href="/"><img src="/themes/linkedin/images/linkedin-logo.png" alt="LinkedIn" class="linkedin-logo"></a>
            </div>
            <nav class="header-nav">
                <a href="/" class="nav-item" style="text-decoration: none; color: inherit; display: flex; flex-direction: column; align-items: center;"><span class="nav-icon">üè†</span><span class="nav-text">Home</span></a>
                <div class="nav-item"><span class="nav-icon">üë•</span><span class="nav-text">My Network</span></div>
                <div class="nav-item"><span class="nav-icon">üíº</span><span class="nav-text">Jobs</span></div>
                <div class="nav-item"><span class="nav-icon">üí¨</span><span class="nav-text">Messaging</span></div>
                <div class="nav-item"><span class="nav-icon">üîî</span><span class="nav-text">Notifications</span></div>
            </nav>
        </div>
    </div>

    <div class="search-wrapper">
        <aside class="side-card">
            <h2>Search LinkedIn</h2>
            <form class="search-form" method="get" action="/search">
                <input type="text" name="q" value="@query" placeholder="Search for people or posts" />
                <button type="submit">Search</button>
            </form>
        </aside>

        <main class="results-column">
            <section>
                <h2>People</h2>
                @if (Model?.HasQuery == true && Model.Users?.Count > 0)
                {
                    <div class="result-list">
                        @foreach (var user in Model.Users)
                        {
                            <div class="result-card">
                                <a href="/u/@user.Username">
                                    <strong>@user.Username</strong><br />
                                    <span>@(string.IsNullOrWhiteSpace(user.Bio) ? "No headline provided." : user.Bio)</span>
                                </a>
                            </div>
                        }
                    </div>
                }
                else if (Model?.HasQuery == true)
                {
                    <div class="empty-state">No people found.</div>
                }
                else
                {
                    <div class="empty-state">Use the search box to find professionals.</div>
                }
            </section>

            <section>
                <h2>Posts</h2>
                @if (Model?.HasQuery == true && Model.Posts?.Count > 0)
                {
                    <div class="result-list">
                        @foreach (var post in Model.Posts)
                        {
                            <div class="result-card">
                                <a href="/posts/@post.Id">
                                    <strong>@post.Username</strong><br />
                                    <span>@Html.Raw(post.Message)</span>
                                </a>
                            </div>
                        }
                    </div>
                }
                else if (Model?.HasQuery == true)
                {
                    <div class="empty-state">No posts matched your query.</div>
                }
                else
                {
                    <div class="empty-state">Search to discover relevant posts.</div>
                }
            </section>
        </main>
    </div>

    <script src="/js/social.js"></script>
</body>
</html>
