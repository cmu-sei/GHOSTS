@{
    Layout = null;
}
@model List<Socializer.Infrastructure.Post>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Facebook</title>
    <link rel="stylesheet" href="/themes/facebook/css/facebook.css">
    <link rel="icon" href="/themes/facebook/images/facebook-icon.png" type="image/png">
</head>
<body>
    <!-- Header -->
    <header class="header">
        <div class="header-left">
            <a href="/" class="logo">facebook</a>
            <input type="text" class="search-bar" placeholder="Search Facebook">
        </div>

        <div class="header-center">
            <a href="/" class="nav-item active">🏠</a>
            <a href="#" class="nav-item">📺</a>
            <a href="#" class="nav-item">🛍️</a>
            <a href="#" class="nav-item">👥</a>
            <a href="#" class="nav-item">🎮</a>
        </div>

        <div class="header-right">
            <button class="icon-btn">⊕</button>
            <button class="icon-btn">💬</button>
            <button class="icon-btn">🔔</button>
            <img src="/u/@ViewBag.UserId/avatar" alt="Profile" class="profile-pic">
        </div>
    </header>

    <!-- Main Container -->
    <div class="main-container">
        <!-- Left Sidebar -->
        <aside class="left-sidebar">
            <a href="/profile" class="sidebar-item">
                <img src="/u/@ViewBag.UserId/avatar" alt="Profile" class="profile-pic">
                <span> &nbsp; @ViewBag.UserId</span>
            </a>
            <a href="#" class="sidebar-item">
                <div class="sidebar-icon"></div>
                <span>Friends</span>
            </a>
            <a href="#" class="sidebar-item">
                <div class="sidebar-icon"></div>
                <span>Groups</span>
            </a>
            <a href="#" class="sidebar-item">
                <div class="sidebar-icon"></div>
                <span>Marketplace</span>
            </a>
            <a href="#" class="sidebar-item">
                <div class="sidebar-icon"></div>
                <span>Watch</span>
            </a>
            <a href="#" class="sidebar-item">
                <div class="sidebar-icon"></div>
                <span>Memories</span>
            </a>
            <a href="#" class="sidebar-item">
                <div class="sidebar-icon"></div>
                <span>Saved</span>
            </a>
            <a href="#" class="sidebar-item">
                <div class="sidebar-icon"></div>
                <span>Pages</span>
            </a>
            <a href="#" class="sidebar-item">
                <div class="sidebar-icon"></div>
                <span>Events</span>
            </a>
            <a href="#" class="sidebar-item">
                <div class="sidebar-icon"></div>
                <span>Ad Manager</span>
            </a>
        </aside>

        <!-- Feed -->
        <main class="feed-container">
            <!-- Create Post -->
            <div class="create-post">
                <div class="create-post-top">
                    <img src="/u/@ViewBag.UserId/avatar" alt="Profile" class="profile-pic">
                    <input type="text" class="create-post-input" placeholder="What's on your mind, @ViewBag.UserId?">
                </div>
                <div class="create-post-buttons">
                    <button class="create-post-btn">📹 Live video</button>
                    <button class="create-post-btn">📷 Photo/video</button>
                    <button class="create-post-btn">😊 Feeling/activity</button>
                </div>
            </div>

            <!-- Stories -->
            <div class="post">
                <div style="padding: 16px;">
                    <h3 style="margin-bottom: 16px;">Stories</h3>
                    <div style="display: flex; gap: 8px; overflow-x: auto;">
                        <div style="min-width: 112px; height: 200px; background: linear-gradient(45deg, #f09433 0%,#e6683c 25%,#dc2743 50%,#cc2366 75%,#bc1888 100%); border-radius: 8px; position: relative; cursor: pointer;">
                            <img src="/themes/facebook/images/profile-pic.jpg" alt="Your story" style="width: 100%; height: 70%; object-fit: cover; border-radius: 8px 8px 0 0;">
                            <div style="position: absolute; bottom: 8px; left: 8px; color: white; font-size: 12px; font-weight: 600;">Your Story</div>
                        </div>
                        <div style="min-width: 112px; height: 200px; background: linear-gradient(45deg, #667eea 0%, #764ba2 100%); border-radius: 8px; position: relative; cursor: pointer;">
                            <img src="/themes/facebook/images/friend1.jpg" alt="Friend story" style="width: 100%; height: 70%; object-fit: cover; border-radius: 8px 8px 0 0;">
                            <div style="position: absolute; bottom: 8px; left: 8px; color: white; font-size: 12px; font-weight: 600;">Sarah Wilson</div>
                        </div>
                        <div style="min-width: 112px; height: 200px; background: linear-gradient(45deg, #f093fb 0%, #f5576c 100%); border-radius: 8px; position: relative; cursor: pointer;">
                            <img src="/themes/facebook/images/friend2.jpg" alt="Friend story" style="width: 100%; height: 70%; object-fit: cover; border-radius: 8px 8px 0 0;">
                            <div style="position: absolute; bottom: 8px; left: 8px; color: white; font-size: 12px; font-weight: 600;">Mike Johnson</div>
                        </div>
                        <div style="min-width: 112px; height: 200px; background: linear-gradient(45deg, #4facfe 0%, #00f2fe 100%); border-radius: 8px; position: relative; cursor: pointer;">
                            <img src="/themes/facebook/images/friend3.jpg" alt="Friend story" style="width: 100%; height: 70%; object-fit: cover; border-radius: 8px 8px 0 0;">
                            <div style="position: absolute; bottom: 8px; left: 8px; color: white; font-size: 12px; font-weight: 600;">Emma Davis</div>
                        </div>
                    </div>
                </div>
            </div>
            <div id="newsfeed-items-grid">
                <button class="btn btn-primary btn-md-2" type="submit" name="submit" id="sendButton">Post Status</button>
                @{
                    foreach (var post in Model)
                    {
                        <article class="post" data-post-id="1">
                            <div class="post-header">
                                <div class="post-user-info">
                                    <img src="/u/@post.User/avatar" class="profile-pic">
                                    <div>
                                        <div class="post-user-name">@post.User</div>
                                        <div class="post-time">@post.CreatedUtc · 🌍</div>
                                    </div>
                                </div>
                                <button class="post-menu">⋯</button>
                            </div>
                            <div class="post-content">
                                <div class="post-text">@post.Message</div>
                            </div>
                            <div class="post-stats">
                                <span>👍❤️😊 @post.Likes.Count</span>
                                <span>23 comments · 8 shares</span>
                            </div>
                            <div class="post-actions">
                                <button class="post-action like-btn" data-action="like">👍 Like</button>
                                <button class="post-action comment-btn" data-action="comment">💬 Comment</button>
                                <button class="post-action share-btn" data-action="share">📤 Share</button>
                            </div>
                        </article>
                        //await Html.RenderPartialAsync("_Post", post);
                    }
                }
            </div>
            <!-- Posts -->
            <article class="post" data-post-id="1">
                <div class="post-header">
                    <div class="post-user-info">
                        <img src="/themes/facebook/images/friend1.jpg" alt="Sarah Wilson" class="profile-pic">
                        <div>
                            <div class="post-user-name">Sarah Wilson</div>
                            <div class="post-time">2 hours ago · 🌍</div>
                        </div>
                    </div>
                    <button class="post-menu">⋯</button>
                </div>
                <div class="post-content">
                    <div class="post-text">Just had an amazing day at the beach! The sunset was absolutely breathtaking. Sometimes you need to take a step back and appreciate the beautiful moments in life. 🌅✨</div>
                    <img src="/themes/facebook/images/beach-sunset.jpg" alt="Beach sunset" class="post-image">
                </div>
                <div class="post-stats">
                    <span>👍❤️😊 245 people</span>
                    <span>23 comments · 8 shares</span>
                </div>
                <div class="post-actions">
                    <button class="post-action like-btn" data-action="like">👍 Like</button>
                    <button class="post-action comment-btn" data-action="comment">💬 Comment</button>
                    <button class="post-action share-btn" data-action="share">📤 Share</button>
                </div>
            </article>

            <article class="post" data-post-id="2">
                <div class="post-header">
                    <div class="post-user-info">
                        <img src="/themes/facebook/images/friend2.jpg" alt="Mike Johnson" class="profile-pic">
                        <div>
                            <div class="post-user-name">Mike Johnson</div>
                            <div class="post-time">4 hours ago · 👥</div>
                        </div>
                    </div>
                    <button class="post-menu">⋯</button>
                </div>
                <div class="post-content">
                    <div class="post-text">Excited to share that I've completed my first marathon! 26.2 miles of pure determination and endurance. Thank you to everyone who supported me along the way. Next goal: under 4 hours! 🏃‍♂️💪</div>
                    <img src="/themes/facebook/images/marathon.jpg" alt="Marathon finish line" class="post-image">
                </div>
                <div class="post-stats">
                    <span>👍💪🔥 189 people</span>
                    <span>45 comments · 12 shares</span>
                </div>
                <div class="post-actions">
                    <button class="post-action like-btn" data-action="like">👍 Like</button>
                    <button class="post-action comment-btn" data-action="comment">💬 Comment</button>
                    <button class="post-action share-btn" data-action="share">📤 Share</button>
                </div>
            </article>

            <article class="post" data-post-id="3">
                <div class="post-header">
                    <div class="post-user-info">
                        <img src="/themes/facebook/images/friend3.jpg" alt="Emma Davis" class="profile-pic">
                        <div>
                            <div class="post-user-name">Emma Davis</div>
                            <div class="post-time">6 hours ago · 🌍</div>
                        </div>
                    </div>
                    <button class="post-menu">⋯</button>
                </div>
                <div class="post-content">
                    <div class="post-text">Homemade pizza night! 🍕 Tried a new recipe with fresh basil and mozzarella. The family loved it! Sometimes the best meals are the ones made with love at home.</div>
                    <img src="/themes/facebook/images/homemade-pizza.jpg" alt="Homemade pizza" class="post-image">
                </div>
                <div class="post-stats">
                    <span>👍😍🤤 127 people</span>
                    <span>18 comments · 5 shares</span>
                </div>
                <div class="post-actions">
                    <button class="post-action like-btn" data-action="like">👍 Like</button>
                    <button class="post-action comment-btn" data-action="comment">💬 Comment</button>
                    <button class="post-action share-btn" data-action="share">📤 Share</button>
                </div>
            </article>

            <article class="post" data-post-id="4">
                <div class="post-header">
                    <div class="post-user-info">
                        <img src="/themes/facebook/images/profile-pic.jpg" alt="John Doe" class="profile-pic">
                        <div>
                            <div class="post-user-name">John Doe</div>
                            <div class="post-time">1 day ago · 👥</div>
                        </div>
                    </div>
                    <button class="post-menu">⋯</button>
                </div>
                <div class="post-content">
                    <div class="post-text">Working on a new project that I'm really excited about! It's amazing how technology can bring people together and create meaningful connections. Can't wait to share more details soon! 💻🚀</div>
                </div>
                <div class="post-stats">
                    <span>👍🚀💯 98 people</span>
                    <span>12 comments · 3 shares</span>
                </div>
                <div class="post-actions">
                    <button class="post-action like-btn liked" data-action="like">👍 Like</button>
                    <button class="post-action comment-btn" data-action="comment">💬 Comment</button>
                    <button class="post-action share-btn" data-action="share">📤 Share</button>
                </div>
            </article>
        </main>

        <!-- Right Sidebar -->
        <aside class="right-sidebar">
            <div style="margin-bottom: 24px;">
                <h3 style="color: #65676b; margin-bottom: 16px;">Sponsored</h3>
                <div style="display: flex; align-items: center; margin-bottom: 12px;">
                    <img src="/themes/facebook/images/ad-placeholder.jpg" alt="Ad" style="width: 100px; height: 100px; border-radius: 8px; margin-right: 12px;">
                    <div>
                        <div style="font-weight: 600; margin-bottom: 4px;">Learn Web Development</div>
                        <div style="color: #65676b; font-size: 13px;">codecademy.com</div>
                    </div>
                </div>
            </div>

            <div>
                <h3 style="color: #65676b; margin-bottom: 16px;">Contacts</h3>
                <div class="sidebar-item">
                    <img src="/themes/facebook/images/friend1.jpg" alt="Sarah Wilson" class="profile-pic">
                    <span>Sarah Wilson</span>
                </div>
                <div class="sidebar-item">
                    <img src="/themes/facebook/images/friend2.jpg" alt="Mike Johnson" class="profile-pic">
                    <span>Mike Johnson</span>
                </div>
                <div class="sidebar-item">
                    <img src="/themes/facebook/images/friend3.jpg" alt="Emma Davis" class="profile-pic">
                    <span>Emma Davis</span>
                </div>
                <div class="sidebar-item">
                    <img src="/themes/facebook/images/friend4.jpg" alt="Alex Smith" class="profile-pic">
                    <span>Alex Smith</span>
                </div>
                <div class="sidebar-item">
                    <img src="/themes/facebook/images/friend5.jpg" alt="Lisa Brown" class="profile-pic">
                    <span>Lisa Brown</span>
                </div>
            </div>
        </aside>
    </div>

    <script src="/themes/facebook/js/facebook.js"></script>
    <!-- JS Scripts -->
    <script src="/js/jQuery/jquery-3.5.1.min.js"></script>

    <script src="/js/libs/jquery.mousewheel.min.js"></script>
    <script src="/js/libs/perfect-scrollbar.min.js"></script>
    <script src="/js/libs/imagesloaded.pkgd.min.js"></script>
    <script src="/js/libs/material.min.js"></script>
    <script src="/js/libs/selectize.min.js"></script>
    <script src="/js/libs/isotope.pkgd.min.js"></script>
    <script src="/js/libs/ajax-pagination.min.js"></script>
    <script src="/js/libs/jquery.magnific-popup.min.js"></script>

    <script src="/js/main.js"></script>
    <script src="/js/libs-init/libs-init.js"></script>

    <script src="/Bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- SVG icons loader -->
    <script src="/js/svg-loader.js"></script>
    <!-- /SVG icons loader -->

    <script src="~/js/signalr.min.js"></script>
    <script src="~/js/posts.js?@System.Guid.NewGuid()" asp-append-version="true"></script>

</body>
</html>
