@{
    Layout = null;
}
@model List<Ghosts.Socializer.Infrastructure.Post>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LinkedIn</title>
    <link rel="stylesheet" href="/themes/linkedin/css/feed.css">
    <link rel="icon" href="/themes/linkedin/images/linkedin-icon.png">
</head>
<body>
    <div class="app">
        <!-- Header -->
        <header class="header">
            <div class="header-container">
                <div class="header-left">
                    <img src="/themes/linkedin/images/linkedin-logo.png" alt="LinkedIn" class="linkedin-logo">
                    <div class="search-container">
                        <input type="text" placeholder="Search" class="search-input">
                        <button class="search-btn">üîç</button>
                    </div>
                </div>
                <nav class="header-nav">
                    <div class="nav-item active">
                        <span class="nav-icon">üè†</span>
                        <span class="nav-text">Home</span>
                    </div>
                    <div class="nav-item">
                        <span class="nav-icon">üë•</span>
                        <span class="nav-text">My Network</span>
                    </div>
                    <div class="nav-item">
                        <span class="nav-icon">üíº</span>
                        <span class="nav-text">Jobs</span>
                    </div>
                    <div class="nav-item">
                        <a href="/messages" style="text-decoration: none; color: inherit; display: flex; flex-direction: column; align-items: center;">
                            <span class="nav-icon">üí¨</span>
                            <span class="nav-text">Messaging</span>
                        </a>
                    </div>
                    <div class="nav-item">
                        <span class="nav-icon">üîî</span>
                        <span class="nav-text">Notifications</span>
                    </div>
                    <div class="nav-item">
                        <img src="/themes/linkedin/images/profile-avatar.jpg" alt="Me" class="nav-avatar">
                        <span class="nav-text">Me</span>
                        <span class="dropdown-arrow">‚ñº</span>
                    </div>
                </nav>
            </div>
        </header>

        <!-- Main Container -->
        <div class="main-container">
            <!-- Left Sidebar -->
            <aside class="left-sidebar">
                <!-- Profile Card -->
                <div class="profile-card">
                    <div class="profile-cover"></div>
                    <div class="profile-info">
                        <img src="/themes/linkedin/images/profile-avatar.jpg" alt="Profile" class="profile-avatar">
                        <div class="profile-details">
                            <h3 class="profile-name">John Doe</h3>
                            <p class="profile-headline">Software Developer at Tech Corp</p>
                        </div>
                    </div>
                    <div class="profile-stats">
                        <div class="stat-item">
                            <span class="stat-label">Profile viewers</span>
                            <span class="stat-value">127</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-label">Post impressions</span>
                            <span class="stat-value">1,234</span>
                        </div>
                    </div>
                </div>

                <!-- Quick Links -->
                <div class="quick-links">
                    <div class="link-item">
                        <span class="link-icon">üîñ</span>
                        <span class="link-text">My items</span>
                    </div>
                    <div class="link-item">
                        <span class="link-icon">üë•</span>
                        <span class="link-text">Groups</span>
                    </div>
                    <div class="link-item">
                        <span class="link-icon">üìÖ</span>
                        <span class="link-text">Events</span>
                    </div>
                    <div class="link-item">
                        <span class="link-icon">üì∞</span>
                        <span class="link-text">Newsletters</span>
                    </div>
                </div>
            </aside>

            <!-- Main Feed -->
            <main class="main-feed">
                <!-- Post Composer -->
                <div class="post-composer">
                    <div class="composer-header">
                        <img src="/themes/linkedin/images/profile-avatar.jpg" alt="Profile" class="composer-avatar">
                        <button class="start-post-btn">Start a post</button>
                    </div>
                    <div class="composer-actions">
                        <button class="composer-action">
                            <span class="action-icon">üì∑</span>
                            <span class="action-text">Photo</span>
                        </button>
                        <button class="composer-action">
                            <span class="action-icon">üé•</span>
                            <span class="action-text">Video</span>
                        </button>
                        <button class="composer-action">
                            <span class="action-icon">üìÖ</span>
                            <span class="action-text">Event</span>
                        </button>
                        <button class="composer-action">
                            <span class="action-icon">üìù</span>
                            <span class="action-text">Write article</span>
                        </button>
                    </div>
                </div>

                <!-- Posts -->
                <div class="posts-container">
                    <div id="newsfeed-items-grid">
                        @{
                            if (Model != null)
                            {
                                foreach (var post in Model)
                                {
                                    await Html.RenderPartialAsync("_Post", post);
                                }
                            }
                        }
                    </div>

                </div>
            </main>

            <!-- Right Sidebar -->
            <aside class="right-sidebar">
                <!-- News Section -->
                <div class="news-section">
                    <h3 class="section-title">LinkedIn News</h3>
                    <div class="news-item">
                        <h4 class="news-title">Tech layoffs continue</h4>
                        <span class="news-meta">1d ago ‚Ä¢ 2,345 readers</span>
                    </div>
                    <div class="news-item">
                        <h4 class="news-title">Remote work trends</h4>
                        <span class="news-meta">2d ago ‚Ä¢ 1,567 readers</span>
                    </div>
                    <div class="news-item">
                        <h4 class="news-title">AI in the workplace</h4>
                        <span class="news-meta">3d ago ‚Ä¢ 3,421 readers</span>
                    </div>
                    <div class="news-item">
                        <h4 class="news-title">Startup funding surge</h4>
                        <span class="news-meta">4d ago ‚Ä¢ 987 readers</span>
                    </div>
                </div>

                <!-- People You May Know -->
                <div class="suggestions-section">
                    <h3 class="section-title">People you may know</h3>
                    <div class="suggestion-item">
                        <img src="/themes/linkedin/images/suggested1.jpg" alt="User" class="suggestion-avatar">
                        <div class="suggestion-info">
                            <h4 class="suggestion-name">Mike Rodriguez</h4>
                            <p class="suggestion-title">UX Designer at CreativeStudio</p>
                            <span class="mutual-connections">5 mutual connections</span>
                        </div>
                        <button class="connect-btn">Connect</button>
                    </div>
                    <div class="suggestion-item">
                        <img src="/themes/linkedin/images/suggested2.jpg" alt="User" class="suggestion-avatar">
                        <div class="suggestion-info">
                            <h4 class="suggestion-name">Emily Watson</h4>
                            <p class="suggestion-title">Data Scientist at DataCorp</p>
                            <span class="mutual-connections">3 mutual connections</span>
                        </div>
                        <button class="connect-btn">Connect</button>
                    </div>
                    <div class="suggestion-item">
                        <img src="/themes/linkedin/images/suggested3.jpg" alt="User" class="suggestion-avatar">
                        <div class="suggestion-info">
                            <h4 class="suggestion-name">David Kim</h4>
                            <p class="suggestion-title">Marketing Manager at BrandPlus</p>
                            <span class="mutual-connections">2 mutual connections</span>
                        </div>
                        <button class="connect-btn">Connect</button>
                    </div>
                </div>
            </aside>
        </div>
    </div>

    <script src="/themes/linkedin/js/feed.js"></script>
</body>
</html>
