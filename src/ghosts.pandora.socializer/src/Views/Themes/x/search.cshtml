@model Ghosts.Socializer.Infrastructure.ViewModels.SearchResultsViewModel
@{
    Layout = null;
    var query = Model?.Query ?? string.Empty;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>X Search - @query</title>
    <link rel="stylesheet" href="css/profile.css">
    <style>
        body {
            background: #0f1419;
            color: #e7e9ea;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
        }
        .header {
            position: sticky;
            top: 0;
            background: #15202b;
            border-bottom: 1px solid #2f3336;
            padding: 12px 24px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .header .logo {
            font-size: 20px;
            font-weight: 600;
        }
        .search-wrapper {
            max-width: 640px;
            margin: 24px auto;
            padding: 0 16px 40px;
        }
        .search-card {
            background: #15202b;
            border: 1px solid #2f3336;
            border-radius: 12px;
            padding: 20px;
            margin-bottom: 24px;
        }
        .search-form {
            display: flex;
            gap: 12px;
        }
        .search-form input {
            flex: 1;
            background: #273340;
            border: 1px solid #2f3336;
            border-radius: 999px;
            color: #e7e9ea;
            padding: 12px 16px;
        }
        .search-form button {
            background: #1d9bf0;
            border: none;
            border-radius: 999px;
            padding: 12px 20px;
            color: #fff;
            font-weight: 600;
            cursor: pointer;
        }
        h2 {
            font-size: 18px;
            margin: 16px 0;
        }
        .results-grid {
            display: grid;
            gap: 12px;
        }
        .result-card {
            background: #0f1419;
            border: 1px solid #2f3336;
            border-radius: 12px;
            padding: 16px;
        }
        .result-card a {
            color: inherit;
            text-decoration: none;
        }
        .result-card a:hover {
            text-decoration: underline;
        }
        .empty-state {
            color: #8b98a5;
        }
    </style>
</head>
<body>
    <div class="header">
        <div class="logo">ùïè</div>
        <div class="actions">
            <a href="/" style="color:#e7e9ea;text-decoration:none;margin-right:16px;">Home</a>
            <a href="/messages" style="color:#e7e9ea;text-decoration:none;margin-right:16px;">Messages</a>
            <a href="/profile" style="color:#e7e9ea;text-decoration:none;">Profile</a>
        </div>
    </div>

    <div class="search-wrapper">
        <div class="search-card">
            <form class="search-form" method="get" action="/search">
                <input type="text" name="q" value="@query" placeholder="Search X" />
                <button type="submit">Search</button>
            </form>
        </div>

        <div class="search-card">
            <h2>People</h2>
            @if (Model?.HasQuery == true && Model.Users?.Count > 0)
            {
                <div class="results-grid">
                    @foreach (var user in Model.Users)
                    {
                        <div class="result-card">
                            <a href="/u/@user.Username">
                                <strong>@user.Username</strong><br />
                                <span>@(string.IsNullOrWhiteSpace(user.Bio) ? "No bio" : user.Bio)</span>
                            </a>
                        </div>
                    }
                </div>
            }
            else if (Model?.HasQuery == true)
            {
                <div class="empty-state">No accounts matched "@query".</div>
            }
            else
            {
                <div class="empty-state">Search for people to follow.</div>
            }
        </div>

        <div class="search-card">
            <h2>Posts</h2>
            @if (Model?.HasQuery == true && Model.Posts?.Count > 0)
            {
                <div class="results-grid">
                    @foreach (var post in Model.Posts)
                    {
                        <div class="result-card">
                            <a href="/posts/@post.Id">
                                <strong>@post.Username</strong><br />
                                <span>@Html.Raw(post.Message)</span>
                            </a>
                        </div>
                    }
                </div>
            }
            else if (Model?.HasQuery == true)
            {
                <div class="empty-state">No posts matched "@query".</div>
            }
            else
            {
                <div class="empty-state">Search to see what people are saying.</div>
            }
        </div>
    </div>

    <script src="/js/social.js"></script>
</body>
</html>
