{
    "ConnectionStrings": {
        "DefaultConnection": "Host=ghosts-postgres;Port=5432;Database=ghosts;User Id=ghosts;Password=scotty@1;"
    },
    "Logging": {
        "IncludeScopes": false,
        "LogLevel": {
            "Default": "Warning"
        }
    },
    "ClientSettings": {
        "OfflineAfterMinutes": 30,
        "LookbackRecords": 5,
        "MatchMachinesBy": "fqdn",
        "QueueSyncDelayInSeconds": 10,
        "NotificationsQueueSyncDelayInSeconds": 10,
        "ListenerPort": 8443,
        "Grouping": {
            "GroupDepth": 3,
            "GroupDelimiters": ["-"],
            "GroupName": "{domain}-{fqdn}",
            "GroupingDefinition": [
                {
                    "Value": "domain",
                    "Direction": "LeftToRight",
                    "Replacements": {
                        ".": "-",
                        "^": "-"
                    }
                },
                {
                    "Value": "fqdn",
                    "Direction": "LeftToRight",
                    "Replacements": {
                        ".": "-",
                        "^": "-"
                    }
                }
            ]
        }
    },
    "InitOptions": {
        "AdminUsername": "scotty@cert.org",
        "AdminPassword": "Password@1"
    },
    "CorsPolicy": {
        "Origins": [],
        "Methods": [],
        "Headers": [],
        "AllowAnyOrigin": true,
        "AllowAnyMethod": true,
        "AllowAnyHeader": true,
        "SupportsCredentials": false
    }
}
