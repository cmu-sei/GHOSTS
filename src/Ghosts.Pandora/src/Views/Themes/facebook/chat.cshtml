@{
    Layout = null;
    ViewBag.Theme = "facebook";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <title>Facebook Messenger</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- n8n Chat styles -->
    <link href="/css/chat.css" rel="stylesheet" />

    <style>
        body {
            margin: 10px;
            font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
            background: white;
            color: #1877f2;
            max-width: 99%;
            display: flex;
            flex-direction: column;
        }

        header {
            padding: 1rem 1.5rem;
            background: #020617;
            border-bottom: 1px solid #1f2937;
        }

        main {
            flex: 1;

        }

        .chat-header {
            display: none !important;
        }

        .chat-input-send-button, .chat-input-file-button
        {
            color: #1877f2 !important;
        }

        .chat-message.chat-message-from-user:not(.chat-message-transparent)
        {
            background: #1877f2;
        }
    </style>
</head>

<body>
    <header>
        <h1>Facebook Messenger</h1>
    </header>

    <main>
        <p>

        </p>
    </main>

    <!-- n8n Chat script (ES module from CDN) -->
    <script type="module">
        import { createChat } from "/js/chat.bundle.es.js";

        createChat({
            // TODO: Replace with your actual chat webhook URL from n8n
            // e.g. "https://your-n8n-instance.com/chat/PaV97zMrxUGXxvNd"
            webhookUrl: "@ViewBag.WorkflowsUrl/webhook/@ViewBag.WorkflowId/chat",

            // Optional: pass metadata into the chat session (available in n8n workflow)
            metadata: {
                fromUsername: "@ViewBag.From",
                toUsername: "@ViewBag.To",
                theme: "facebook",
            },

            // Optional: UI options
            // position: "right", // "left" | "right"
            mode: "fullscreen",  // default; or "full-screen" in some setups
        });

        const msgs = document.querySelectorAll('.chat-message.chat-message-from-bot');

        if (msgs.length >= 2) {
            msgs[0].remove();
            msgs[1].remove();
        }
    </script>
</body>

</html>
