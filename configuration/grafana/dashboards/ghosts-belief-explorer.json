      "targets": [
        {
          "datasource": {
            "type": "postgres",
            "uid": "ghosts"
          },
          "editorMode": "code",
          "format": "table",
          "rawQuery": true,
          "rawSql": "WITH ranked AS (\n  SELECT\n    b.npcid,\n    b.name,\n    b.posterior,\n    b.step,\n    ROW_NUMBER() OVER (PARTITION BY b.npcid, b.name ORDER BY b.step ASC) as rn_first,\n    ROW_NUMBER() OVER (PARTITION BY b.npcid, b.name ORDER BY b.step DESC) as rn_last\n  FROM npc_beliefs b\n  WHERE $__timeFilter(b.createdutc)\n    AND b.name IN ($belief)\n    AND b.npcid::text IN ($npc)\n)\nSELECT\n  CONCAT_WS(' ', n.npcprofile->'name'->>'first', n.npcprofile->'name'->>'last') AS npc_name,\n  f.name AS belief,\n  f.posterior::numeric(10,4) AS initial_posterior,\n  l.posterior::numeric(10,4) AS current_posterior,\n  (l.posterior - f.posterior)::numeric(10,4) AS change,\n  l.step - f.step + 1 AS steps\nFROM ranked f\nJOIN ranked l ON f.npcid = l.npcid AND f.name = l.name AND l.rn_last = 1\nJOIN npcs n ON f.npcid = n.id\nWHERE f.rn_first = 1\nORDER BY current_posterior DESC",
          "refId": "A"
        }
      ],
      "title": "BELIEF SUMMARY",
      "type": "table"
    }
