        {
            foreach (var account in npc.Accounts)
            {
                <li class="list-group-item text-right">
                    <span class="pull-left">
                        @account.Username
                    </span>@@<strong>@account.Url</strong>
                </li>
            }
        }
    </ul>
</div><!--/col-3-->
<div class="col-sm-9">

