@{
    Layout = null;
}
@using Ghosts.Pandora.Infrastructure

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Instagram | @ViewBag.PartnerUsername</title>
    <link rel="stylesheet" href="/themes/instagram/css/feed.css">
    <link rel="icon" href="/themes/instagram/images/instagram-icon.png">
    <style>
        .chat-layout {
            display: flex;
            height: 100vh;
            background: #fafafa;
        }

        .chat-sidebar {
            width: 350px;
            background: #fff;
            border-right: 1px solid #dbdbdb;
            display: flex;
            flex-direction: column;
        }

        .chat-sidebar-header {
            padding: 20px;
            border-bottom: 1px solid #dbdbdb;
        }

        .back-link {
            color: #0095f6;
            text-decoration: none;
            font-size: 14px;
            font-weight: 600;
        }

        .chat-partner {
            padding: 20px;
            display: flex;
            align-items: center;
            background: #f8f8f8;
        }

        .chat-partner-avatar {
            width: 56px;
            height: 56px;
            border-radius: 50%;
            margin-right: 12px;
        }

        .chat-partner-info h2 {
            font-size: 16px;
            font-weight: 600;
            color: #262626;
            margin: 0;
        }

        .chat-partner-status {
            color: #8e8e8e;
            font-size: 12px;
            margin-top: 2px;
        }

        .chat-main {
            flex: 1;
            display: flex;
            flex-direction: column;
            background: #fff;
        }

        .chat-header {
            padding: 20px;
            border-bottom: 1px solid #dbdbdb;
            display: flex;
            align-items: center;
        }

        .chat-header-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            margin-right: 12px;
        }

        .chat-header-info h1 {
            font-size: 16px;
            font-weight: 600;
            color: #262626;
            margin: 0;
        }

        .chat-messages {
            flex: 1;
            padding: 20px;
            overflow-y: auto;
            display: flex;
            flex-direction: column;
            gap: 8px;
        }

        .chat-message {
            display: flex;
            max-width: 60%;
        }

        .chat-message.sent {
            align-self: flex-end;
            flex-direction: row-reverse;
        }

        .chat-message.received {
            align-self: flex-start;
        }

        .chat-message-avatar {
            width: 28px;
            height: 28px;
            border-radius: 50%;
            margin: 0 8px;
            align-self: flex-end;
        }

        .chat-message-bubble {
            background: #efefef;
            padding: 12px 16px;
            border-radius: 22px;
            max-width: 100%;
            word-wrap: break-word;
        }

        .chat-message.sent .chat-message-bubble {
            background: #0095f6;
            color: #fff;
        }

        .chat-message-text {
            font-size: 14px;
            line-height: 1.4;
        }

        .chat-message-time {
            font-size: 11px;
            color: #8e8e8e;
            text-align: center;
            margin-top: 4px;
            padding: 0 16px;
        }

        .chat-message.sent .chat-message-time {
            color: #8e8e8e;
        }

        .chat-input-container {
            padding: 20px;
            border-top: 1px solid #dbdbdb;
        }

        .chat-input-form {
            display: flex;
            align-items: center;
            border: 1px solid #dbdbdb;
            border-radius: 22px;
            padding: 8px 16px;
            background: #fafafa;
        }

        .chat-input {
            flex: 1;
            border: none;
            background: none;
            font-size: 14px;
            padding: 8px 0;
            outline: none;
            resize: none;
        }

        .chat-input::placeholder {
            color: #8e8e8e;
        }

        .chat-send-btn {
            background: none;
            border: none;
            color: #0095f6;
            cursor: pointer;
            font-size: 14px;
            font-weight: 600;
            margin-left: 8px;
        }

        .chat-send-btn:hover {
            color: #1877f2;
        }

        .empty-chat {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 100%;
            text-align: center;
            color: #8e8e8e;
        }

        .empty-chat h3 {
            color: #262626;
            font-weight: 300;
            margin-bottom: 8px;
        }
    </style>
</head>
<body data-theme="instagram">
    <div class="chat-layout">
        <div class="chat-sidebar">
            <div class="chat-sidebar-header">
                <a href="/messages" class="back-link">← Back to messages</a>
            </div>

            <div class="chat-partner">
                <img src="/u/@ViewBag.PartnerUsername/avatar" alt="@ViewBag.PartnerUsername" class="chat-partner-avatar">
                <div class="chat-partner-info">
                    <h2>@ViewBag.PartnerUsername</h2>
                    <div class="chat-partner-status">Active</div>
                </div>
            </div>
        </div>

        <div class="chat-main">
            <div class="chat-header">
                <img src="/u/@ViewBag.PartnerUsername/avatar" alt="@ViewBag.PartnerUsername" class="chat-header-avatar">
                <div class="chat-header-info">
                    <h1>@ViewBag.PartnerUsername</h1>
                </div>
            </div>

            <div class="chat-messages">
                @if (ViewBag.Conversation != null)
                {
                    @foreach (var message in ViewBag.Conversation)
                    {
                        <div class="chat-message @(message.FromUsername == ViewBag.Username ? "sent" : "received")">
                            <img src="/u/@(message.FromUsername == ViewBag.Username ? ViewBag.Username : ViewBag.PartnerUsername)/avatar"
                                 alt="@(message.FromUsername == ViewBag.Username ? ViewBag.Username : ViewBag.PartnerUsername)"
                                 class="chat-message-avatar">
                            <div class="chat-message-content">
                                <div class="chat-message-bubble">
                                    <div class="chat-message-text">@message.Message</div>
                                </div>
                                <div class="chat-message-time">
                                    @message.CreatedUtc.ToString("h:mm tt")@(message.ReadUtc != null ? " • Seen" : "")
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="empty-chat">
                        <h3>Say hello to @ViewBag.PartnerUsername!</h3>
                        <p>Start the conversation with a message.</p>
                    </div>
                }
            </div>

            <div class="chat-input-container">
                <form method="post" action="/messages/send" class="chat-input-form">
                    <input type="hidden" name="toUsername" value="@ViewBag.PartnerUsername">
                    <textarea name="message" class="chat-input" placeholder="Message..." required rows="1"></textarea>
                    <button type="submit" class="chat-send-btn">Send</button>
                </form>
            </div>
        </div>
    </div>

    <script src="/lib/jquery/dist/jquery.min.js"></script>
    <script>
        // Auto-scroll to bottom of messages
        $('.chat-messages').scrollTop($('.chat-messages')[0].scrollHeight);

        // Auto-resize textarea
        $('.chat-input').on('input', function() {
            this.style.height = 'auto';
            this.style.height = Math.min(this.scrollHeight, 100) + 'px';
        });

        // Submit on Enter
        $('.chat-input').on('keypress', function(e) {
            if (e.which === 13 && !e.shiftKey) {
                e.preventDefault();
                $(this).closest('form').submit();
            }
        });
    </script>
</body>
</html>
