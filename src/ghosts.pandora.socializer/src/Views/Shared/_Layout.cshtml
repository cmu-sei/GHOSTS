@{
    var rnd = new Random();
    var statusArray = new[] { "online", "away", "disconnected" };

    Ghosts.Socializer.Infrastructure.User GetRandomUser()
    {
        var u = new Ghosts.Socializer.Infrastructure.User();
        var number = rnd.Next(1, 85);
        u.Username = Faker.Internet.UserName();
        u.Avatar = $"/u/{u.Username}/avatar";
        if(rnd.Next(1, 3) > 1)
            u.Username = Faker.Name.FullName();
        u.Status = statusArray[rnd.Next(statusArray.Length)];
        return u;
    }
}

