@{
    Layout = null;
}
@model List<Socializer.Infrastructure.Post>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Discord | Your Place to Talk and Hang Out</title>
    <link rel="stylesheet" href="/themes/discord/css/feed.css">
    <link rel="icon" href="/themes/discord/images/discord-icon.png">
</head>
<body>
    <div class="app">
        <!-- Left Sidebar -->
        <div class="server-sidebar">
            <div class="home-button">
                <div class="server-icon home">
                    <img src="/themes/discord/images/discord-icon.png" alt="Discord Home" class="discord-logo">
                </div>
            </div>
            <div class="server-separator"></div>

            <!-- Servers -->
            <div class="server-list">
                <div class="server-item active">
                    <div class="server-icon">
                        <img src="/themes/discord/images/gaming-server.jpg" alt="Gaming Server" class="server-avatar">
                    </div>
                    <div class="notification-badge">3</div>
                </div>
                <div class="server-item">
                    <div class="server-icon">
                        <img src="/themes/discord/images/tech-server.jpg" alt="Tech Server" class="server-avatar">
                    </div>
                </div>
                <div class="server-item">
                    <div class="server-icon">
                        <img src="/themes/discord/images/art-server.jpg" alt="Art Server" class="server-avatar">
                    </div>
                    <div class="notification-badge">1</div>
                </div>
                <div class="server-item">
                    <div class="server-icon">
                        <img src="/themes/discord/images/music-server.jpg" alt="Music Server" class="server-avatar">
                    </div>
                </div>
                <div class="server-item">
                    <div class="server-icon">
                        <img src="/themes/discord/images/study-server.jpg" alt="Study Server" class="server-avatar">
                    </div>
                </div>
            </div>

            <div class="add-server">
                <div class="server-icon add">+</div>
            </div>

            <div class="explore-server">
                <div class="server-icon explore">üß≠</div>
            </div>
        </div>

        <!-- Channel Sidebar -->
        <div class="channel-sidebar">
            <div class="server-header">
                <h2 class="server-name">Gaming Hub</h2>
                <button class="dropdown-btn">‚ñº</button>
            </div>

            <div class="channels-container">
                <!-- Text Channels -->
                <div class="channel-category">
                    <div class="category-header">
                        <span class="category-arrow">‚ñº</span>
                        <span class="category-name">TEXT CHANNELS</span>
                        <button class="add-channel">+</button>
                    </div>
                    <div class="channel-list">
                        <div class="channel-item active">
                            <span class="channel-icon">#</span>
                            <span class="channel-name">general</span>
                            <div class="unread-indicator"></div>
                        </div>
                        <div class="channel-item">
                            <span class="channel-icon">#</span>
                            <span class="channel-name">gaming-discussion</span>
                        </div>
                        <div class="channel-item">
                            <span class="channel-icon">#</span>
                            <span class="channel-name">tech-talk</span>
                            <div class="unread-indicator">2</div>
                        </div>
                        <div class="channel-item">
                            <span class="channel-icon">#</span>
                            <span class="channel-name">memes</span>
                        </div>
                        <div class="channel-item">
                            <span class="channel-icon">#</span>
                            <span class="channel-name">off-topic</span>
                        </div>
                    </div>
                </div>

                <!-- Voice Channels -->
                <div class="channel-category">
                    <div class="category-header">
                        <span class="category-arrow">‚ñº</span>
                        <span class="category-name">VOICE CHANNELS</span>
                        <button class="add-channel">+</button>
                    </div>
                    <div class="channel-list">
                        <div class="channel-item">
                            <span class="channel-icon">üîä</span>
                            <span class="channel-name">General Voice</span>
                            <div class="voice-users">
                                <img src="/themes/discord/images/user1-avatar.jpg" alt="User" class="voice-avatar">
                                <img src="/themes/discord/images/user2-avatar.jpg" alt="User" class="voice-avatar">
                                <span class="voice-count">+2</span>
                            </div>
                        </div>
                        <div class="channel-item">
                            <span class="channel-icon">üîä</span>
                            <span class="channel-name">Gaming Room</span>
                        </div>
                        <div class="channel-item">
                            <span class="channel-icon">üîä</span>
                            <span class="channel-name">Study Room</span>
                            <div class="voice-users">
                                <img src="/themes/discord/images/user3-avatar.jpg" alt="User" class="voice-avatar">
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- User Panel -->
            <div class="user-panel">
                <div class="user-info">
                    <img src="/themes/discord/images/profile-avatar.jpg" alt="Profile" class="user-avatar">
                    <div class="user-details">
                        <div class="user-name">JohnDoe</div>
                        <div class="user-status">#1234</div>
                    </div>
                </div>
                <div class="user-controls">
                    <button class="control-btn" title="Mute">üé§</button>
                    <button class="control-btn" title="Deafen">üéß</button>
                    <button class="control-btn" title="Settings">‚öôÔ∏è</button>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <!-- Channel Header -->
            <div class="channel-header">
                <div class="channel-info">
                    <span class="channel-hashtag">#</span>
                    <h3 class="channel-title">general</h3>
                    <span class="channel-topic">Welcome to the Gaming Hub! Feel free to chat about anything here.</span>
                </div>
                <div class="channel-controls">
                    <button class="header-btn" title="Start Voice Call">üìû</button>
                    <button class="header-btn" title="Start Video Call">üìπ</button>
                    <button class="header-btn" title="Pin Message">üìå</button>
                    <button class="header-btn" title="Member List">üë•</button>
                    <div class="search-bar">
                        <input type="text" placeholder="Search" class="search-input">
                        <button class="search-btn">üîç</button>
                    </div>
                    <button class="header-btn" title="Inbox">üì•</button>
                    <button class="header-btn" title="Help">‚ùì</button>
                </div>
            </div>

            <!-- Messages Container -->
            <div class="messages-container">
                <div class="messages-list">
                    @foreach (var post in Model)
                    {
                        <div class="message">
                            <img src="/u/@post.User.Username/avatar" alt="@post.User.Username" class="message-avatar">
                            <div class="message-content">
                                <div class="message-header">
                                    <span class="message-author">@post.User.Username</span>
                                    <span class="message-timestamp">@post.CreatedUtc</span>
                                </div>
                                <div class="message-text">
                                    @Html.Raw(post.Message)
                                </div>
                                <div class="message-reactions">
                                    @if (post.Likes?.Count > 0)
                                    {
                                        <div class="reaction">
                                            <span class="reaction-emoji">‚ù§Ô∏è</span>
                                            <span class="reaction-count">@post.Likes.Count</span>
                                        </div>
                                    }

                                        <div class="reaction">
                                            <span class="reaction-emoji">üí¨</span>
                                            <span class="reaction-count">0</span>
                                        </div>

                                </div>
                            </div>
                            <div class="message-actions">
                                <button class="message-action like-it" data-id="@post.Id" title="Add Reaction">üòÄ</button>
                                <button class="message-action" title="Reply">‚Ü©Ô∏è</button>
                                <button class="message-action" title="More">‚ãØ</button>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Message Input -->
            <div class="message-input-container">
                <div class="message-input-wrapper">
                    <button class="attachment-btn">üìé</button>
                    <div class="input-area">
                        <textarea placeholder="Message #general" class="message-input" rows="1"></textarea>
                        <div class="input-actions">
                            <button class="input-action" title="Gift Nitro">üéÅ</button>
                            <button class="input-action" title="GIF">GIF</button>
                            <button class="input-action" title="Sticker">üòä</button>
                            <button class="input-action" title="Emoji">üôÇ</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Member List -->
        <div class="member-list">
            <div class="members-header">
                <h3>Members ‚Äî 127</h3>
            </div>

            <div class="members-container">
                <!-- Online Members -->
                <div class="member-category">
                    <h4 class="member-role">ONLINE ‚Äî 23</h4>
                    <div class="member-list-items">
                        <div class="member-item">
                            <img src="/themes/discord/images/user1-avatar.jpg" alt="User" class="member-avatar">
                            <div class="member-info">
                                <div class="member-name">AliceGamer</div>
                                <div class="member-activity">Playing God of War</div>
                            </div>
                            <div class="member-status online"></div>
                        </div>
                        <div class="member-item">
                            <img src="/themes/discord/images/user2-avatar.jpg" alt="User" class="member-avatar">
                            <div class="member-info">
                                <div class="member-name">TechNinja</div>
                                <div class="member-activity">Listening to Spotify</div>
                            </div>
                            <div class="member-status online"></div>
                        </div>
                        <div class="member-item">
                            <img src="/themes/discord/images/user3-avatar.jpg" alt="User" class="member-avatar">
                            <div class="member-info">
                                <div class="member-name">CodeMaster</div>
                                <div class="member-bot-badge">BOT</div>
                            </div>
                            <div class="member-status online"></div>
                        </div>
                        <div class="member-item">
                            <img src="/themes/discord/images/user4-avatar.jpg" alt="User" class="member-avatar">
                            <div class="member-info">
                                <div class="member-name">DevGuru</div>
                                <div class="member-activity">Visual Studio Code</div>
                            </div>
                            <div class="member-status online"></div>
                        </div>
                        <div class="member-item">
                            <img src="/themes/discord/images/user5-avatar.jpg" alt="User" class="member-avatar">
                            <div class="member-info">
                                <div class="member-name">ReactPro</div>
                            </div>
                            <div class="member-status online"></div>
                        </div>
                    </div>
                </div>

                <!-- Offline Members -->
                <div class="member-category">
                    <h4 class="member-role">OFFLINE ‚Äî 104</h4>
                    <div class="member-list-items">
                        <div class="member-item">
                            <img src="/themes/discord/images/user6-avatar.jpg" alt="User" class="member-avatar offline">
                            <div class="member-info">
                                <div class="member-name offline">MusicLover</div>
                            </div>
                            <div class="member-status offline"></div>
                        </div>
                        <div class="member-item">
                            <img src="/themes/discord/images/user7-avatar.jpg" alt="User" class="member-avatar offline">
                            <div class="member-info">
                                <div class="member-name offline">GameMaster</div>
                            </div>
                            <div class="member-status offline"></div>
                        </div>
                        <div class="member-item">
                            <img src="/themes/discord/images/user8-avatar.jpg" alt="User" class="member-avatar offline">
                            <div class="member-info">
                                <div class="member-name offline">ArtisticSoul</div>
                            </div>
                            <div class="member-status offline"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="/lib/jquery/dist/jquery.min.js"></script>
    <script src="/js/signalr.min.js"></script>
    <script src="/js/posts.js"></script>
    <script src="/themes/discord/js/feed.js"></script>
</body>
</html>
