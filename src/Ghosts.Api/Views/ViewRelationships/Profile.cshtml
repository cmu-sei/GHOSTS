        <div class="col-xs-12" style="margin-top:20px">
            <h3 style="margin-top:0">Addresses</h3>
            @foreach (var item in npc.Address)
            {
                <label>
                    <h4>@item.AddressType</h4>
                </label>
                <div>@item.ToString()</div>
            }
        </div>
    </div>
