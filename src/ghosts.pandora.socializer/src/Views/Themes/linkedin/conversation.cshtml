@{
    Layout = null;
}
@using Ghosts.Socializer.Infrastructure

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LinkedIn | @ViewBag.PartnerUsername</title>
    <link rel="stylesheet" href="/themes/linkedin/css/linkedin.css">
    <link rel="icon" href="/themes/linkedin/images/linkedin-icon.png" type="image/png">
    <style>
        .chat-container {
            max-width: 1000px;
            margin: 0 auto;
            padding: 24px;
            background: #f3f2ef;
            min-height: 100vh;
        }

        .chat-header {
            background: #fff;
            border-radius: 8px 8px 0 0;
            padding: 20px 24px;
            box-shadow: 0 0 0 1px rgba(0, 0, 0, 0.15), 0 2px 3px rgba(0, 0, 0, 0.2);
            display: flex;
            align-items: center;
        }

        .back-btn {
            background: none;
            border: none;
            color: #0a66c2;
            cursor: pointer;
            padding: 8px;
            margin-right: 16px;
            border-radius: 4px;
            font-size: 18px;
            transition: background-color 0.15s ease-in-out;
        }

        .back-btn:hover {
            background: rgba(0, 0, 0, 0.08);
        }

        .chat-user-avatar {
            width: 48px;
            height: 48px;
            border-radius: 50%;
            margin-right: 16px;
        }

        .chat-user-info h1 {
            font-size: 20px;
            font-weight: 600;
            color: rgba(0, 0, 0, 0.9);
            margin: 0 0 4px 0;
        }

        .chat-user-status {
            color: rgba(0, 0, 0, 0.6);
            font-size: 14px;
            margin: 0;
        }

        .chat-messages {
            background: #fff;
            min-height: 500px;
            max-height: 600px;
            overflow-y: auto;
            padding: 24px;
            display: flex;
            flex-direction: column;
            gap: 16px;
            border-left: 1px solid rgba(0, 0, 0, 0.15);
            border-right: 1px solid rgba(0, 0, 0, 0.15);
        }

        .chat-message {
            display: flex;
            align-items: flex-start;
            max-width: 75%;
        }

        .chat-message.sent {
            align-self: flex-end;
            flex-direction: row-reverse;
        }

        .chat-message.received {
            align-self: flex-start;
        }

        .chat-message-avatar {
            width: 36px;
            height: 36px;
            border-radius: 50%;
            margin: 0 12px;
        }

        .chat-message-bubble {
            background: #f3f2ef;
            padding: 12px 16px;
            border-radius: 8px;
            max-width: 100%;
            word-wrap: break-word;
            border: 1px solid #e9e5df;
        }

        .chat-message.sent .chat-message-bubble {
            background: #0a66c2;
            color: #fff;
            border-color: #0a66c2;
        }

        .chat-message-text {
            font-size: 14px;
            line-height: 1.5;
            margin-bottom: 4px;
        }

        .chat-message-time {
            font-size: 11px;
            color: rgba(0, 0, 0, 0.6);
            text-align: center;
            margin-top: 4px;
        }

        .chat-message.sent .chat-message-time {
            color: rgba(255, 255, 255, 0.8);
        }

        .chat-input-container {
            background: #fff;
            border-radius: 0 0 8px 8px;
            padding: 20px 24px;
            box-shadow: 0 0 0 1px rgba(0, 0, 0, 0.15), 0 2px 3px rgba(0, 0, 0, 0.2);
        }

        .chat-input-form {
            display: flex;
            align-items: center;
            background: #f3f2ef;
            border-radius: 24px;
            padding: 8px 16px;
            border: 1px solid #e9e5df;
        }

        .chat-input {
            flex: 1;
            border: none;
            background: none;
            font-size: 14px;
            padding: 12px 0;
            outline: none;
            resize: none;
            max-height: 120px;
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
        }

        .chat-input::placeholder {
            color: rgba(0, 0, 0, 0.6);
        }

        .chat-send-btn {
            background: #0a66c2;
            border: none;
            border-radius: 50%;
            width: 36px;
            height: 36px;
            color: #fff;
            cursor: pointer;
            margin-left: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: background-color 0.15s ease-in-out;
        }

        .chat-send-btn:hover {
            background: #004182;
        }

        .empty-chat {
            text-align: center;
            padding: 48px 24px;
            color: rgba(0, 0, 0, 0.6);
            margin: auto;
        }

        .empty-chat h3 {
            color: rgba(0, 0, 0, 0.9);
            margin-bottom: 8px;
            font-weight: 400;
        }

        .professional-badge {
            background: #0a66c2;
            color: #fff;
            font-size: 10px;
            padding: 2px 6px;
            border-radius: 2px;
            margin-left: 8px;
            font-weight: 600;
        }

        .connection-status {
            display: flex;
            align-items: center;
            color: rgba(0, 0, 0, 0.6);
            font-size: 12px;
        }

        .connection-dot {
            width: 8px;
            height: 8px;
            background: #0a66c2;
            border-radius: 50%;
            margin-right: 6px;
        }
    </style>
</head>
<body data-theme="linkedin">
    <!-- LinkedIn Header -->
    <header class="navbar">
        <div class="navbar-content">
            <div class="navbar-left">
                <a href="/" class="navbar-brand">
                    <img src="/themes/linkedin/images/linkedin-icon.png" alt="LinkedIn" class="navbar-logo">
                </a>
            </div>
            <div class="navbar-center">
                <a href="/" class="nav-link">
                    <span class="nav-icon">üè†</span>
                    <span class="nav-text">Home</span>
                </a>
                <a href="/messages" class="nav-link active">
                    <span class="nav-icon">üí¨</span>
                    <span class="nav-text">Messaging</span>
                </a>
            </div>
            <div class="navbar-right">
                <img src="/u/@ViewBag.Username/avatar" alt="Profile" class="profile-avatar">
            </div>
        </div>
    </header>

    <div class="chat-container">
        <div class="chat-header">
            <button class="back-btn" onclick="window.location.href='/messages'">‚Üê</button>
            <img src="/u/@ViewBag.PartnerUsername/avatar" alt="@ViewBag.PartnerUsername" class="chat-user-avatar">
            <div class="chat-user-info">
                <h1>
                    @ViewBag.PartnerUsername
                    <span class="professional-badge">PRO</span>
                </h1>
                <div class="connection-status">
                    <div class="connection-dot"></div>
                    1st degree connection
                </div>
            </div>
        </div>

        <div class="chat-messages">
            @if (ViewBag.Conversation != null)
            {
                @foreach (var message in ViewBag.Conversation)
                {
                    <div class="chat-message @(message.FromUsername == ViewBag.Username ? "sent" : "received")">
                        <img src="/u/@(message.FromUsername == ViewBag.Username ? ViewBag.Username : ViewBag.PartnerUsername)/avatar"
                             alt="@(message.FromUsername == ViewBag.Username ? ViewBag.Username : ViewBag.PartnerUsername)"
                             class="chat-message-avatar">
                        <div class="chat-message-content">
                            <div class="chat-message-bubble">
                                <div class="chat-message-text">@message.Message</div>
                            </div>
                            <div class="chat-message-time">
                                @message.CreatedUtc.ToString("MMM dd ‚Ä¢ h:mm tt")@(message.ReadUtc != null ? " ‚Ä¢ Read" : "")
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="empty-chat">
                    <h3>Start a professional conversation with @ViewBag.PartnerUsername</h3>
                    <p>Build your professional network by sending a thoughtful message.</p>
                </div>
            }
        </div>

        <div class="chat-input-container">
            <form method="post" action="/messages/send" class="chat-input-form">
                <input type="hidden" name="toUsername" value="@ViewBag.PartnerUsername">
                <textarea name="message" class="chat-input" placeholder="Write a message..." required rows="1"></textarea>
                <button type="submit" class="chat-send-btn">
                    ‚û§
                </button>
            </form>
        </div>
    </div>

    <script src="/lib/jquery/dist/jquery.min.js"></script>
    <script>
        // Auto-scroll to bottom of messages
        $('.chat-messages').scrollTop($('.chat-messages')[0].scrollHeight);

        // Auto-resize textarea
        $('.chat-input').on('input', function() {
            this.style.height = 'auto';
            this.style.height = Math.min(this.scrollHeight, 120) + 'px';
        });

        // Submit on Enter
        $('.chat-input').on('keypress', function(e) {
            if (e.which === 13 && !e.shiftKey) {
                e.preventDefault();
                $(this).closest('form').submit();
            }
        });
    </script>
</body>
</html>
